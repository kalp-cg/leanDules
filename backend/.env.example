# Environment Configuration\n# Copy this file to .env and fill in your actual values\n\n# Server Configuration\nNODE_ENV=development\nPORT=5000\nHOST=localhost\n\n# Database Configuration\nDATABASE_URL=\"postgresql://username:password@localhost:5432/learnduels_db\"\n\n# JWT Configuration\nJWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random\nJWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here-make-it-long-and-random\nJWT_EXPIRE=15m\nJWT_REFRESH_EXPIRE=7d\n\n# Redis Configuration (Optional - for caching and session management)\nREDIS_URL=redis://localhost:6379\n\n# CORS Configuration\nCORS_ORIGIN=http://localhost:3000,http://localhost:8080\n\n# Rate Limiting Configuration\nRATE_LIMIT_WINDOW=900000\n# 15 minutes in milliseconds\nRATE_LIMIT_MAX=100\n# Maximum requests per window\n\n# File Upload Configuration\nMAX_FILE_SIZE=10485760\n# 10MB in bytes\nUPLOAD_PATH=./uploads\n\n# Email Configuration (Optional - for notifications)\nSMTP_HOST=smtp.gmail.com\nSMTP_PORT=587\nSMTP_USER=your-email@gmail.com\nSMTP_PASS=your-app-password\nFROM_EMAIL=noreply@learnduels.com\nFROM_NAME=\"LearnDuels Team\"\n\n# Logging Configuration\nLOG_LEVEL=info\nLOG_FILE=./logs/app.log\n\n# Feature Flags\nENABLE_REGISTRATION=true\nENABLE_EMAIL_VERIFICATION=false\nENABLE_SOCIAL_LOGIN=false\n\n# Socket.IO Configuration\nSOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:8080\n\n# Prisma Configuration\n# This is automatically generated by Prisma and should match DATABASE_URL\n# DATABASE_URL=\"postgresql://username:password@localhost:5432/learnduels_db?schema=public\"\n\n# Development Tools (Only for development)\nPRISMA_STUDIO_PORT=5555\nDEBUG=learnduels:*\n\n# Security Headers\nENABLE_SECURITY_HEADERS=true\n\n# API Documentation\nENABLE_API_DOCS=true\nAPI_DOCS_PATH=/api/docs\n\n# Quiz Configuration\nDEFAULT_QUIZ_TIME_LIMIT=300\n# 5 minutes in seconds\nDEFAULT_QUESTIONS_PER_QUIZ=10\nMAX_QUESTIONS_PER_QUIZ=50\n\n# Challenge Configuration\nDEFAULT_CHALLENGE_TIME_LIMIT=600\n# 10 minutes in seconds\nMAX_CHALLENGE_PARTICIPANTS=100\n\n# Leaderboard Configuration\nLEADERBOARD_CACHE_TTL=300\n# 5 minutes in seconds\nLEADERBOARD_MAX_ENTRIES=100\n\n# Notification Configuration\nENABLE_REAL_TIME_NOTIFICATIONS=true\nENABLE_EMAIL_NOTIFICATIONS=false\nENABLE_PUSH_NOTIFICATIONS=false